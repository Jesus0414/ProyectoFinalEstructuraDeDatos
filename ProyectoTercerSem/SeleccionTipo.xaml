             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoTercerSem"
             mc:Ignorable="d" 
             d:DesignHeight="301" d:DesignWidth="490">
    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Agregar nuevo elemento" VerticalAlignment="Top" Margin="10,10,0,0" Height="39" Width="275" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Tipo:" VerticalAlignment="Top" Margin="10,54,0,0" FontSize="14"/>
        <RadioButton x:Name="rbtnPelicula" Content="Pelicula" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,57,0,0" Checked="rbtnPelicula_Checked" />
        <RadioButton x:Name="rbtnSerie" Content="Serie" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="135,57,0,0" Checked="rbtnSerie_Checked"/>
        <Grid x:Name="grdSeleccionTipo" HorizontalAlignment="Left" Height="218" Margin="10,73,0,0" VerticalAlignment="Top" Width="470"/>
    </Grid>
</UserControl>
